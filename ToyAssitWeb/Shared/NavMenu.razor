@code {
    public class ThemeClass
    {
        public int ThemeId { get; set; }
        public string ThemeName { get; set; }
    }

    private List<ThemeClass> themeMaps = new List<ThemeClass> ()
    {
       new ThemeClass() { ThemeId = 1, ThemeName = "dark" },
       new ThemeClass() { ThemeId = 2, ThemeName = "solar" },
       new ThemeClass() { ThemeId = 3, ThemeName = "light" },
    };

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private ThemeClass CurrentTheme { get; set; }

    private async Task ToggleNavMenu()
    {
        try
        {
            CurrentTheme = await LocalStorage.GetItemAsync<ThemeClass>("theme");
        }
        catch (Exception ex)
        {
            CurrentTheme = themeMaps.First();
        }

        var next = themeMaps.Where(x => x.ThemeId > (CurrentTheme?.ThemeId ?? 0)).OrderBy(o => o.ThemeId).FirstOrDefault();
        if(next == null)
        {
            next = themeMaps.First();
        }

        await LocalStorage.SetItemAsync("theme", next);

        await JSRuntime.InvokeAsync<string>("setTheme", new object[] { next.ThemeName });
        CurrentTheme = next;
    }
}
