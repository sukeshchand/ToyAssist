@using BlazorBootstrap
@using ToyAssist.Web.DatabaseModels.Models
@using ToyAssist.Web.Helpers
@using System.Text.Json;
@using System.Collections.Generic;
@using ToyAssist.Web.TypeExtensions;

@if (Amount != null)
{
    <div class="row" style="padding: 6px; @BorderStyle">
        <div class="col-12 box">
            <div style="" class="box">
                @if (IsShowBaseAmount)
                {
                    <div>
                        <span style="font-weight: bold; font-size:x-large;">
                            @(Amount.ToStringCustom()) @CurrencyFrom.CurrencyCode
                        </span>
                    </div>
                }
                <div style="margin:5px;" class="box">
                    @{
                        var conversionItems = GeneralHelper.GetConversionList(@CurrencyFrom, @CurrenciesTo, (int)@Amount);
                    }
                    @if (conversionItems.Count > 0)
                    {
                        <span>
                            ≈
                        </span>
                    }
                    @foreach (var conversionItem in conversionItems)
                    {
                        <div style="font-size: small; border: 1px solid #ccc; margin: 5px; padding: 5px; display: inline-block; border-radius: 4px;">
                            @conversionItem
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}